<%= render 'shared/navbar' %>
<div class="container">
  <div class="cocktail">
    <div class='header'>
      <h1><%= @cocktail.name %></h1>
      <h4><span class='button'><%= link_to "Edit Info", edit_cocktail_path(@cocktail) %></span> | <span class="button"><%= link_to "Add a Dose", new_cocktail_dose_path(@cocktail) %></span> | <span class='button'><%= link_to 'Delete', @cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></span></h4>
    </div>
    <div class="description">
      <div>
        <img src="<%= cl_image_path @cocktail.photo.path, height: 450, width: 350, crop: :fill %>" alt="">
      </div>
      <div class='destext'>
        <h3><%= @cocktail.description%></h3>
      </div>
    </div>

    <% @cocktail.doses.each do |dose| %>
        <div class="ingredient">
          <h2><%= dose.ingredient.name %> | <%= dose.description %></h2>
          <h5><span class="button"><%= link_to "Edit dose", edit_cocktail_dose_path(@cocktail, dose) %></span> | <span class="button"><%= link_to "Delete dose", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: 'Are you sure?' } %></span></h5>
          <p><%= dose.ingredient.description %></p>
        </div>
      <% end %>
    <div class="footer">
      <h4><span class="button"><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></span> | <span class="button"><%= link_to "Back", cocktails_path%></span></h4>
    </div>
  </div>
</div>
