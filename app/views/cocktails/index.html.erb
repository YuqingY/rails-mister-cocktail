<%= render 'shared/banner' %>
<div class="container">
  <div class='header'>
    <h1>All Cocktails</h1>
  </div>
  <div class="row">
    <% Cocktail.all.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do%>
      <div class="card col-xs-12 col-sm-4" style="background-image:
         url('<%= cl_image_path cocktail.photo.path, crop: :fill %>')">
          <h2><%= cocktail.name %></h2>
          <p><%= cocktail.description%></p>
      </div>
      <% end %>
    <% end %>
  </div>
  <div class="footer">
    <h4><span class="button"><%= link_to "Add New Cocktail", new_cocktail_path%></span></h4>
  </div>
</div>
