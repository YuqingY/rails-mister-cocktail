<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :ingredient, collection: Ingredient.all %>
    <%= f.input :description, as: :text %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
